# Copy this to .env and fill values as needed
# Path to DuckDB file (used by the dashboard and services)
DUCKDB_PATH=./data/akahu.duckdb

# Akahu tokens (redact before publishing)
AKAHU_USER_TOKEN=
AKAHU_APP_TOKEN=

# Flask options
FLASK_ENV=development
FLASK_DEBUG=1

# Optional house value used by the dashboard
HOUSE_VALUE=1450000.0
